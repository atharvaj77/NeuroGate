# Secrets Template - DO NOT commit actual secrets to version control
#
# To create secrets in Kubernetes:
#   kubectl create secret generic neurogate-secrets \
#     --from-literal=openai-api-key=sk-your-key-here \
#     --from-literal=anthropic-api-key=sk-ant-your-key-here \
#     --from-literal=redis-password=your-redis-password \
#     --namespace=neurogate
#
# Or use this as a template and replace placeholders:
#   sed 's/YOUR_OPENAI_KEY/sk-actual-key/g' secrets.yaml.template | kubectl apply -f -

apiVersion: v1
kind: Secret
metadata:
  name: neurogate-secrets
  namespace: neurogate
  labels:
    app: neurogate
type: Opaque
stringData:
  # OpenAI API Key (required)
  openai-api-key: "YOUR_OPENAI_KEY"

  # Anthropic API Key (optional, for multi-provider support)
  anthropic-api-key: "YOUR_ANTHROPIC_KEY"

  # Redis password (if Redis authentication is enabled)
  redis-password: "YOUR_REDIS_PASSWORD"

  # Google Cloud API Key (optional, for Gemini support)
  google-api-key: "YOUR_GOOGLE_KEY"

  # AWS credentials (optional, for Bedrock support)
  aws-access-key-id: "YOUR_AWS_ACCESS_KEY"
  aws-secret-access-key: "YOUR_AWS_SECRET_KEY"

---
# TLS Certificate Secret (managed by cert-manager)
# This is auto-generated by cert-manager, kept here for reference
apiVersion: v1
kind: Secret
metadata:
  name: neurogate-tls-cert
  namespace: neurogate
  labels:
    app: neurogate
type: kubernetes.io/tls
data:
  # These will be populated by cert-manager
  tls.crt: ""
  tls.key: ""
